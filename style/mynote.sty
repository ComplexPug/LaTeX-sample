%%% CTEX格式设置 %%%
\ctexset{
	today=big,
	contentsname=\textbf{Contents},
	section={beforeskip=0pt,afterskip=3pt},    
	chapter={beforeskip=0pt,afterskip=5pt},    	
	part/format=\huge\bfseries\centering\color{myblue},
	chapter/format=\LARGE\bfseries\centering\color{myblue},
	section/format=\Large\bfseries\color{myblue},
	subsection/format=\color{myblue},
}

%%% 链接设置 %%%
\hypersetup{
	colorlinks=true,
	linkcolor=myred,
	urlcolor=myblue,
	filecolor=mygreen,
}

%%% 页眉页脚设置 %%%

\pagestyle{fancy}
\fancyhead[L]{\textcolor{black}{\@zhcoursename}}
\fancyhead[C]{\textcolor{black}{\leftmark}}
\fancyhead[R]{\textcolor{black}{第\thepage 页}}
\fancyfoot{}
\renewcommand{\headrule}{\color{black}\hrule width\textwidth}


%%% 设置章节标题页的页眉和页脚 %%%
\fancypagestyle{plain}{%
	\pagestyle{fancy}
	\fancyhead[L]{\textcolor{black}{\@zhcoursename}}
	\fancyhead[C]{\textcolor{black}{\leftmark}}
	\fancyhead[R]{\textcolor{black}{第\thepage 页}}
	\fancyfoot{}
}


\tcbuselibrary{theorems}
\tcbuselibrary{skins}
\tcbsetforeverylayer{enhanced}

%%% 自定义命令 %%%

% TextTips
\newtcolorbox{TextTips}[1]{
	skin=empty,
	top=0pt,
	bottom=0pt,
	toprule=0pt,
	bottomrule=0pt,
	leftrule=0pt,
	rightrule=0pt,
	borderline west={2pt}{0pt}{#1},
}
% tips
\newenvironment{mytips}[2][mygreen] % #1 color #2 name
{\begin{TextTips}{#1}
		\textcolor{#1}{\heiti{#2:}}
}
{\end{TextTips}}

