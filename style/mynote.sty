% box
\newenvironment{mybox}[2][green]
% optional#1 color mandatory#2 name
{	\begin{tcolorbox}[
		title=#2,
		enhanced,
		attach boxed title to top left={
			yshifttext=-1mm
		},
		colback=#1!5,
		colframe=#1!45!black,
		fonttitle=\heiti,
		boxed title style={
		% sharp corners,
			colback=#1!45!black,
			colframe=#1!45!black,
		}
	]
}
{\end{tcolorbox}}




